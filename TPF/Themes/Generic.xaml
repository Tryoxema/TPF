        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="tpf:DataAxis">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
