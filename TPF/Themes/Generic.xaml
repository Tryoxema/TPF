                                        VerticalAlignment="Bottom" HorizontalAlignment="Center" UseLayoutRounding="True"/>
                        <ContentControl x:Name="HeaderPresenter" Content="{TemplateBinding HeaderContent}" Foreground="{TemplateBinding Foreground}"
