    <Style TargetType="tpf:Comparer" x:Key="TPF.ComparerStyle">
        <Setter Property="ThumbStyle" Value="{StaticResource TPF.ComparerHorizontalThumbStyle}"/>
        <Setter Property="BorderBrush" Value="{tpf:ResourceLink Key=BorderBrush}"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="tpf:Comparer">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <tpf:ComparerTrack>
                            <tpf:ComparerTrack.FirstContentPresenter>
                                <ContentPresenter ContentSource="FirstContent"/>
                            </tpf:ComparerTrack.FirstContentPresenter>
