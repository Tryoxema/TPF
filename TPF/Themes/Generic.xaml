                        <Trigger Property="IsPinned" Value="True">
                            <Setter TargetName="PinGlyph" Property="Data" Value="M2,0 L10,0 10,12 12,12 12,12.2 6.5,12.2 6.5,18 5.5,18 5.5,12.2 0,12.2 0,12 2,12 z M2.2,0.2 L7,0.2 7,12 2.2,12 z"/>
