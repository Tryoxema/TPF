    <Style TargetType="tpf:SplashScreen" x:Key="TPF.SplashScreenStyle">
        <Setter Property="Foreground" Value="{tpf:ResourceLink Key=TextBrush}"/>
        <Setter Property="Background" Value="{tpf:ResourceLink Key=PrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{tpf:ResourceLink Key=BorderBrush}"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Padding" Value="25 25 25 15"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="MinWidth" Value="300"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="tpf:SplashScreen">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Background="{tpf:ResourceLink Key=HeaderBrush}" Margin="-1" Visibility="{TemplateBinding HasTitle, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel Margin="30">
                                    <TextBlock Text="{TemplateBinding Title}" Foreground="{tpf:ResourceLink Key=SelectedTextBrush}" FontWeight="SemiBold" FontSize="18" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{TemplateBinding SubTitle}" Foreground="{tpf:ResourceLink Key=SelectedTextBrush}" FontSize="15" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Row="1" Padding="{TemplateBinding Padding}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="{TemplateBinding StatusText}" HorizontalAlignment="{TemplateBinding HorizontalStatusAlignment}"/>
                                    <tpf:ProgressBar Grid.Row="1" Progress="{TemplateBinding Progress}" SecondaryProgress="{TemplateBinding SecondaryProgress}"
                                                     Minimum="{TemplateBinding ProgressMinimum}" Maximum="{TemplateBinding ProgressMaximum}" Margin="0 10 0 20"
                                                     IsIndeterminate="{TemplateBinding IsIndeterminate}" Visibility="{TemplateBinding ProgressBarVisibility}"/>
                                    <ContentControl Grid.Row="2" Content="{TemplateBinding Footer}" HorizontalAlignment="{TemplateBinding HorizontalFooterAlignment}" VerticalAlignment="Bottom" Margin="0 20 0 0"/>
                                </Grid>
                            </Border>

                            <Image x:Name="Logo" Source="{Binding Path=Logo, RelativeSource={RelativeSource TemplatedParent}, TargetNullValue={x:Null}}" 
                                   Width="{TemplateBinding LogoWidth}" Height="{TemplateBinding LogoHeight}" Margin="10" Grid.RowSpan="2"
                                   Stretch="{TemplateBinding LogoStretch}"/>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="LogoPosition" Value="TopLeft">
                            <Setter TargetName="Logo" Property="HorizontalAlignment" Value="Left"/>
                            <Setter TargetName="Logo" Property="VerticalAlignment" Value="Top"/>
                        </Trigger>
                        <Trigger Property="LogoPosition" Value="TopRight">
                            <Setter TargetName="Logo" Property="HorizontalAlignment" Value="Right"/>
                            <Setter TargetName="Logo" Property="VerticalAlignment" Value="Top"/>
                        </Trigger>
                        <Trigger Property="LogoPosition" Value="BottomLeft">
                            <Setter TargetName="Logo" Property="HorizontalAlignment" Value="Left"/>
                            <Setter TargetName="Logo" Property="VerticalAlignment" Value="Bottom"/>
                        </Trigger>
                        <Trigger Property="LogoPosition" Value="BottomRight">
                            <Setter TargetName="Logo" Property="HorizontalAlignment" Value="Right"/>
                            <Setter TargetName="Logo" Property="VerticalAlignment" Value="Bottom"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="tpf:SplashScreen" BasedOn="{StaticResource TPF.SplashScreenStyle}"/>

    <!-- ==================== WizardPage ==================== -->
    <Style TargetType="tpf:WizardPage" x:Key="TPF.WizardPageStyle">
        <Setter Property="Foreground" Value="{tpf:ResourceLink Key=TextBrush}"/>
        <Setter Property="BorderBrush" Value="{tpf:ResourceLink Key=BorderBrush}"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="tpf:WizardPage">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Column="0" Grid.RowSpan="2" BorderBrush="{TemplateBinding BorderBrush}" Padding="{TemplateBinding SideContentPadding}"
                                    BorderThickness="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SideContentBorderWidth, Converter={StaticResource DoubleToThicknessConverter}, ConverterParameter=0\,0\,#\,0}" 
                                    Width="{TemplateBinding SideContentWidth}" Visibility="{TemplateBinding SideContentVisibility}">
                                <ContentPresenter ContentSource="SideContent"/>
                            </Border>

                            <Border Grid.Column="1" Grid.Row="0" BorderBrush="{TemplateBinding BorderBrush}" Padding="{TemplateBinding HeaderPadding}"
                                    BorderThickness="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=HeaderBorderHeight, Converter={StaticResource DoubleToThicknessConverter}, ConverterParameter=0\,0\,0\,#}"
                                    Height="{TemplateBinding HeaderHeight}" Visibility="{TemplateBinding HeaderVisibility}">
                                <ContentPresenter ContentSource="Header"/>
                            </Border>

                            <ContentPresenter Grid.Column="1" Grid.Row="1" ContentSource="Content" Margin="{TemplateBinding Padding}"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="tpf:WizardPage" BasedOn="{StaticResource TPF.WizardPageStyle}"/>
    <!-- ==================== Wizard ==================== -->
    <Style TargetType="tpf:Wizard" x:Key="TPF.WizardStyle">
        <Setter Property="Foreground" Value="{tpf:ResourceLink Key=TextBrush}"/>
        <Setter Property="Background" Value="{tpf:ResourceLink Key=PrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{tpf:ResourceLink Key=BorderBrush}"/>
        <Setter Property="FooterBackground" Value="{tpf:ResourceLink Key=SecondaryBrush}"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="FooterPadding" Value="5 10"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="tpf:Wizard">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ContentPresenter Content="{TemplateBinding SelectedPage}"/>

                            <Border Grid.Row="1" Background="{TemplateBinding FooterBackground}" BorderThickness="0 1 0 0" BorderBrush="{TemplateBinding BorderBrush}">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="{TemplateBinding FooterPadding}">
                                    <tpf:Button Command="{x:Static tpf:WizardCommands.GoToPrevious}" 
                                                Content="{TemplateBinding GoToPreviousButtonContent}" 
                                                Visibility="{TemplateBinding GoToPreviousButtonVisibility}"
                                                Margin="0 0 5 0" MinWidth="70" VerticalAlignment="Center"/>
                                    <tpf:Button Command="{x:Static tpf:WizardCommands.GoToNext}" 
                                                Content="{TemplateBinding GoToNextButtonContent}" 
                                                Visibility="{TemplateBinding GoToNextButtonVisibility}"
                                                Margin="0 0 5 0" MinWidth="70" VerticalAlignment="Center"/>
                                    <tpf:Button Command="{x:Static tpf:WizardCommands.Finish}" 
                                                Content="{TemplateBinding FinishButtonContent}" 
                                                Visibility="{TemplateBinding FinishButtonVisibility}"
                                                Margin="0 0 5 0" MinWidth="70" VerticalAlignment="Center"/>
                                    <tpf:Button Command="{x:Static tpf:WizardCommands.Cancel}" 
                                                Content="{TemplateBinding CancelButtonContent}" 
                                                Visibility="{TemplateBinding CancelButtonVisibility}"
                                                Margin="0 0 5 0" MinWidth="70" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="tpf:Wizard" BasedOn="{StaticResource TPF.WizardStyle}"/>
</ResourceDictionary>