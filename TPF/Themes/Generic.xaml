    <Style TargetType="datetimerange:ItemIntervalLabelsControl" BasedOn="{StaticResource TPF.IntervalLabelsControlStyle}"/>
    <Style TargetType="datetimerange:GroupIntervalLabel" x:Key="TPF.GroupIntervalLabelStyle">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{tpf:ResourceLink Key=TextBrush}"/>
        <Setter Property="BorderBrush" Value="{tpf:ResourceLink Key=BorderBrush}"/>
