    <Style TargetType="datetimerange:GroupIntervalLabel" BasedOn="{StaticResource TPF.GroupIntervalLabelStyle}"/>
    <Style TargetType="datetimerange:ItemIntervalLabel" x:Key="TPF.ItemIntervalLabelStyle">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{tpf:ResourceLink Key=TextBrush}"/>
        <Setter Property="BorderBrush" Value="{tpf:ResourceLink Key=BorderBrush}"/>
        <Setter Property="BorderThickness" Value="0 0 1 0"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="4 2"/>
