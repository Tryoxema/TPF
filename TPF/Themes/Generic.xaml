                    <tpf:SimplePanel>
                        <datetimerange:IntervalSelectionThumbTrack x:Name="PART_Track">
                            <datetimerange:IntervalSelectionThumbTrack.PreceedingOverlay>
                                <Border Background="{TemplateBinding OverlayBrush}" IsHitTestVisible="False"/>
                            </datetimerange:IntervalSelectionThumbTrack.PreceedingOverlay>
                            <datetimerange:IntervalSelectionThumbTrack.FollowingOverlay>
                                <Border Background="{TemplateBinding OverlayBrush}" IsHitTestVisible="False"/>
                            </datetimerange:IntervalSelectionThumbTrack.FollowingOverlay>
                            <datetimerange:IntervalSelectionThumbTrack.MiddleThumb>
                                <Thumb Style="{StaticResource TPF.IntervalSelectionMiddleThumbStyle}"/>
