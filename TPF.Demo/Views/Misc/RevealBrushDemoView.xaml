<views:ViewBase x:Class="TPF.Demo.Views.RevealBrushDemoView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:tpf="http://schemas.tpf.com/xaml/presentation"
                xmlns:views="clr-namespace:TPF.Demo.Views"
                DataContext="{Binding RelativeSource={RelativeSource Self}}"
                mc:Ignorable="d" 
                d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="5">
        <UniformGrid Rows="4" Columns="3" Background="Transparent" tpf:MouseTracker.IsEnabled="True">
            <Border BorderThickness="1" BorderBrush="{tpf:ResourceLink Key=BorderBrush}" Margin="5">
                <Rectangle OpacityMask="{tpf:RevealBrush Color=White, Size=80, Opacity=1}" Fill="{StaticResource HexBrush}"/>
            </Border>
            <Border BorderThickness="1" BorderBrush="{tpf:ResourceLink Key=BorderBrush}" Margin="5">
                <Rectangle OpacityMask="{tpf:RevealBrush Color=White, Size=80, Opacity=1}" Fill="{StaticResource HexBrush}"/>
            </Border>
            <Border BorderThickness="1" BorderBrush="{tpf:ResourceLink Key=BorderBrush}" Margin="5">
                <Rectangle OpacityMask="{tpf:RevealBrush Color=White, Size=80, Opacity=1}" Fill="{StaticResource HexBrush}"/>
            </Border>
            
            <Border BorderThickness="1" BorderBrush="{tpf:ResourceLink Key=BorderBrush}" Margin="5">
                <Rectangle OpacityMask="{tpf:RevealBrush Color=White, Size=80, Opacity=1}" Fill="Red"/>
            </Border>
            <Border BorderThickness="1" BorderBrush="{tpf:ResourceLink Key=BorderBrush}" Margin="5">
                <Rectangle OpacityMask="{tpf:RevealBrush Color=White, Size=80, Opacity=1}" Fill="Green"/>
            </Border>
            <Border BorderThickness="1" BorderBrush="{tpf:ResourceLink Key=BorderBrush}" Margin="5">
                <Rectangle OpacityMask="{tpf:RevealBrush Color=White, Size=80, Opacity=1}" Fill="Blue"/>
            </Border>
            
            <Border BorderThickness="1" BorderBrush="{tpf:ResourceLink Key=BorderBrush}" Margin="5">
                <Rectangle OpacityMask="{tpf:RevealBrush Color=White, Size=80, Opacity=1}" Fill="Yellow"/>
            </Border>
            <Border BorderThickness="1" BorderBrush="{tpf:ResourceLink Key=BorderBrush}" Margin="5">
                <Rectangle OpacityMask="{tpf:RevealBrush Color=White, Size=80, Opacity=1}" Fill="Orange"/>
            </Border>
            <Border BorderThickness="1" BorderBrush="{tpf:ResourceLink Key=BorderBrush}" Margin="5">
                <Rectangle OpacityMask="{tpf:RevealBrush Color=White, Size=80, Opacity=1}" Fill="OrangeRed"/>
            </Border>
            
            <Border BorderThickness="1" BorderBrush="{tpf:ResourceLink Key=BorderBrush}" Margin="5">
                <Rectangle OpacityMask="{tpf:RevealBrush Color=White, Size=80, Opacity=1}" Fill="Purple"/>
            </Border>
            <Border BorderThickness="1" BorderBrush="{tpf:ResourceLink Key=BorderBrush}" Margin="5">
                <Rectangle OpacityMask="{tpf:RevealBrush Color=White, Size=80, Opacity=1}" Fill="Cyan"/>
            </Border>
            <Border BorderThickness="1" BorderBrush="{tpf:ResourceLink Key=BorderBrush}" Margin="5">
                <Rectangle OpacityMask="{tpf:RevealBrush Color=White, Size=80, Opacity=1}" Fill="White"/>
            </Border>
        </UniformGrid>
    </Grid>
</views:ViewBase>