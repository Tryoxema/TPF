<views:ViewBase x:Class="TPF.Demo.Views.ShadowDemoView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:tpf="http://schemas.tpf.com/xaml/presentation"
                xmlns:views="clr-namespace:TPF.Demo.Views"
                DataContext="{Binding RelativeSource={RelativeSource Self}}"
                mc:Ignorable="d" 
                d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="5">
        <StackPanel>
            <tpf:UniformGrid Columns="6">
                <tpf:SimplePanel Margin="10" Height="40">
                    <tpf:Shadow ShadowDepth="Depth0" Background="{tpf:ResourceLink Key=PrimaryBrush}"/>
                    <TextBlock Text="Depth0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </tpf:SimplePanel>

                <tpf:SimplePanel Margin="10" Height="40">
                    <tpf:Shadow ShadowDepth="Depth1" Background="{tpf:ResourceLink Key=PrimaryBrush}"/>
                    <TextBlock Text="Depth1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </tpf:SimplePanel>

                <tpf:SimplePanel Margin="10" Height="40">
                    <tpf:Shadow ShadowDepth="Depth2" Background="{tpf:ResourceLink Key=PrimaryBrush}"/>
                    <TextBlock Text="Depth2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </tpf:SimplePanel>

                <tpf:SimplePanel Margin="10" Height="40">
                    <tpf:Shadow ShadowDepth="Depth3" Background="{tpf:ResourceLink Key=PrimaryBrush}"/>
                    <TextBlock Text="Depth3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </tpf:SimplePanel>

                <tpf:SimplePanel Margin="10" Height="40">
                    <tpf:Shadow ShadowDepth="Depth4" Background="{tpf:ResourceLink Key=PrimaryBrush}"/>
                    <TextBlock Text="Depth4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </tpf:SimplePanel>

                <tpf:SimplePanel Margin="10" Height="40">
                    <tpf:Shadow ShadowDepth="Depth5" Background="{tpf:ResourceLink Key=PrimaryBrush}"/>
                    <TextBlock Text="Depth5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </tpf:SimplePanel>
            </tpf:UniformGrid>

            <tpf:UniformGrid Columns="6" Margin="0 40 0 0">
                <tpf:SimplePanel Margin="10" Height="40">
                    <tpf:Shadow ShadowDepth="Depth0" Darken="True" Background="{tpf:ResourceLink Key=PrimaryBrush}"/>
                    <TextBlock Text="Depth0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </tpf:SimplePanel>

                <tpf:SimplePanel Margin="10" Height="40">
                    <tpf:Shadow ShadowDepth="Depth1" Darken="True" Background="{tpf:ResourceLink Key=PrimaryBrush}"/>
                    <TextBlock Text="Depth1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </tpf:SimplePanel>

                <tpf:SimplePanel Margin="10" Height="40">
                    <tpf:Shadow ShadowDepth="Depth2" Darken="True" Background="{tpf:ResourceLink Key=PrimaryBrush}"/>
                    <TextBlock Text="Depth2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </tpf:SimplePanel>

                <tpf:SimplePanel Margin="10" Height="40">
                    <tpf:Shadow ShadowDepth="Depth3" Darken="True" Background="{tpf:ResourceLink Key=PrimaryBrush}"/>
                    <TextBlock Text="Depth3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </tpf:SimplePanel>

                <tpf:SimplePanel Margin="10" Height="40">
                    <tpf:Shadow ShadowDepth="Depth4" Darken="True" Background="{tpf:ResourceLink Key=PrimaryBrush}"/>
                    <TextBlock Text="Depth4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </tpf:SimplePanel>

                <tpf:SimplePanel Margin="10" Height="40">
                    <tpf:Shadow ShadowDepth="Depth5" Darken="True" Background="{tpf:ResourceLink Key=PrimaryBrush}"/>
                    <TextBlock Text="Depth5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </tpf:SimplePanel>
            </tpf:UniformGrid>
        </StackPanel>
    </Grid>
</views:ViewBase>