<views:ViewBase x:Class="TPF.Demo.Views.DividerDemoView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:tpf="http://schemas.tpf.com/xaml/presentation"
                xmlns:views="clr-namespace:TPF.Demo.Views"
                DataContext="{Binding RelativeSource={RelativeSource Self}}"
                mc:Ignorable="d" 
                d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="5">
        <StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <tpf:Button Content="Divide" Width="80"/>
                <tpf:Divider Orientation="Vertical"/>
                <tpf:Button Content="and" Width="80"/>
                <tpf:Divider Orientation="Vertical"/>
                <tpf:Button Content="Conquer" Width="80"/>
            </StackPanel>

            <tpf:Divider Content="Left" HorizontalContentAlignment="Left"/>
            <tpf:Divider Content="Center"/>
            <tpf:Divider Content="Right" HorizontalContentAlignment="Right"/>
            <tpf:Divider Content="LineStrokeThickness" LineStrokeThickness="3"/>
            <tpf:Divider Content="LineStrokeDashArray" LineStrokeDashArray="5 3"/>
            <tpf:Divider Content="LineStroke" LineStroke="Crimson"/>
        </StackPanel>
    </Grid>
</views:ViewBase>