                        <Button Content="Apply" HorizontalAlignment="Right" Click="ApplyTextBrushButton_Click"/>
                    </tpf:SimplePanel>
                </StackPanel>

                <StackPanel Margin="0 2">
                    <TextBlock Text="SelectedTextBrush" Foreground="{tpf:ResourceLink Key=TextBrush}"/>
